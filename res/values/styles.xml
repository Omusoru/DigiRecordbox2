<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"> 
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. --> 
        
        <!-- Button styles -->
		<item name="android:buttonStyle">@style/DigiButton</item>
		
		<!-- Preference styles 
		<item name="android:preferenceStyle">@style/DigiPreference</item>
		<item name="android:checkBoxPreferenceStyle">@style/DigiPreference.CheckBox</item> -->
        
        <!-- Text styles -->
        <item name="android:textColorPrimary">@color/white</item>  
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        
        <item name="android:textAppearance">@style/DigiTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/DigiTextAppearance.Large</item>
		<item name="android:textAppearanceMedium">@style/DigiTextAppearance.Medium</item>
		<item name="android:textAppearanceSmall">@style/DigiTextAppearance.Small</item>
        
        <!-- Widget styles  --> 
        <item name="android:editTextStyle">@style/DigiEditText</item>
        <item name="android:listViewStyle">@style/DigiListView</item>
        <item name="android:seekBarStyle">@style/DigiSeekBar</item>
        
        <!-- Window attributes -->
        <item name="android:windowBackground">@drawable/bg</item>
        <!-- <item name="android:windowNoTitle">true</item>-->
    </style>
    
    <!-- Login activity theme -->
    <style name="AppTheme.LoginActivity"> 
        
        <!-- Button styles -->
		<item name="android:buttonStyle">@style/DigiButton.Login</item>
        
        <!-- Widget styles  --> 
        <item name="android:editTextStyle">@style/DigiEditText.Holo</item>   
        
        <!-- Window attributes -->    
        <item name="android:windowBackground">@drawable/bg_login</item>        
    </style>
    
    <!-- Help activity theme -->
    <style name="AppTheme.HelpActivity">     
        <!-- Window attributes -->    
        <item name="android:windowBackground">@drawable/bg_help</item>   
    </style>
    
    <!-- Button style -->
    <style name="DigiButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <!-- Button style square -->
    <style name="DigiButton.Login">
        <item name="android:background">@color/digi_blue_light</item>
    </style>
    
    <!-- Edit text style -->
    <style name="DigiEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/white</item> <!--  for api <= 10 -->
        <item name="android:padding">7dp</item> 
    </style>
    
    <!-- Edit text style holo -->
    <style name="DigiEditText.Holo">
        <item name="android:background">@drawable/edit_text_holo_light_white</item>
    </style>
    
    <!-- List view style -->
    <style name="DigiListView" parent="@android:style/Widget.ListView">
	    <item name="android:listSelector">@android:color/transparent</item>
	    <item name="android:divider">@android:color/transparent</item>
	    <item name="android:dividerHeight">10dp</item>
	    <!-- background color for each row is set in rowlayout_recordinglist.xml -->      
    </style>
    
    <!-- Seek bar style -->
    <style name="DigiSeekBar" parent="@android:style/Widget.SeekBar">
		<item name="android:thumb">@drawable/seek_bar_thumb</item>
		<item name="android:progressDrawable">@drawable/seek_bar_progress</item>
		<item name="android:minHeight">3dp</item>
		<item name="android:maxHeight">3dp</item>
		<item name="android:thumbOffset">-0.5dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="DigiTextAppearance" parent="@android:style/TextAppearance">        
        <item name="android:textSize">16sp</item> <!-- default size -->
    </style>
    
    <style name="DigiTextAppearance.Large">
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="DigiTextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="DigiTextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="DigiTextAppearance.Smallest">
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Text View styles -->
    <style name="DigiTextViewTimer" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/bg_recorder_timer</item>
        <item name="android:textAppearance">@style/DigiTextAppearance.Large</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>
    

</resources>
