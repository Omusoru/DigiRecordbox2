<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.rcsrds.recordbox.AboutActivity" >

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_about_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_about_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_content1" />

        <TextView
            android:id="@+id/tv_about_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title2"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_about_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_content2" />

        <TextView
            android:id="@+id/tv_about_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title3"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_about_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_content3" />

    </LinearLayout>
    
   

</ScrollView>
