<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <ImageView
		android:id="@+id/img_logo"
		android:layout_width="180dp"
		android:layout_height="120dp"
		android:layout_marginBottom="20dp"
		android:contentDescription="@string/app_name"
		android:src="@drawable/digirecordbox" />
    
    <TextView
        android:id="@+id/tv_about_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_content1"
        android:gravity="center"
        android:textAppearance="@style/DigiTextAppearance" />
    
    <TextView
        android:id="@+id/tv_about_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/about_content2"
        android:textAppearance="@style/DigiTextAppearance" />
    
    <TextView
        android:id="@+id/tv_about_content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_content3"
        android:gravity="center"
        android:textAppearance="@style/DigiTextAppearance.Smallest" />

    <Button
        android:id="@+id/btn_tos"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/btn_tos"
        android:textAppearance="@style/DigiTextAppearance.Smallest" />

</LinearLayout>
