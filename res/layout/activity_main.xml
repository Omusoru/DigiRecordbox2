<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="ro.rcsrds.recordbox.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="end" >
        
        <Button
	        android:id="@+id/btn_more"
	        android:layout_width="16dp"
	        android:layout_height="20dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginRight="16dp"
	        android:layout_marginEnd="16dp"
	        android:background="@drawable/icon_more" />
        
    </LinearLayout>
    
    <ImageView
            android:id="@+id/img_logo"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/digirecordbox" />
    
    <Button
        android:id="@+id/btn_recorder_start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button_recorder_start" />

    <LinearLayout
        android:id="@+id/layout_recorder_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:background = "@drawable/bg_recorder_buttons_bmp" >
        
        <Button
            android:id="@+id/btn_recorder_cancel"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/button_recorder_cancel"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />
        
         <TextView
             android:id="@+id/tv_recorder_time"
             style="@style/DigiTextViewTimer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/tv_recorder_time" />
        
        <Button
            android:id="@+id/btn_recorder_stop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/button_recorder_stop"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"  />
        
    </LinearLayout>

</LinearLayout>